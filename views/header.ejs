		<!-- Header -->
    <div id="header">
      <div class="menu">
          <ul>
            <li class="nav-item">
              <h4><a href="/posts">Home</a></h4>
            </li>
            <li class="nav-item">
              <h4><a href="/admin">Admin</a></h4>
            </li>
            <li class="nav-item">
              <h4><a href="https://github.com/KimKyuHyeok">GitHub 둘러보기</a></h4>
            </li>
          </ul>
      </div>
      <div class="inner">
        <% categories.forEach(subCategory => { %>
            <% let cnt = 0; %>
            <div class="sub-toggle category-name" onclick="subToggle(this)">
                <a style="text-decoration: none;"><%= subCategory.title %> (
                    <% if (subCategory.posts && subCategory.posts.length) { %>
                        <% cnt = subCategory.posts.length; %>
                        <%= cnt %>
                    <% } else { %>
                        0
                    <% } %>
                    )
                </a>
            </div>
            <ul class="sidebar-post-list">
                <% if (subCategory.posts && subCategory.posts.length) { %>
                    <% subCategory.posts.forEach(post => { %>
                        <li>
                            <div class="post-detail">
                                <a class="post-title" href="/posts/<%= post.id %>"><%= post.title %></a>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No posts found.</li>
                <% } %>
            </ul>
        <% }) %>
    </div>
    
    </div>
