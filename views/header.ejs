  </head>
<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		<!-- Header -->
    <div id="header">
      <div class="btn">
          <nav class="navbar navbar-expand-lg bg-body-tertiary">
              <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/posts">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/admin">Admin</a>
                    </li>
                  </ul>
                </div>
              </div>
          </nav>
      </div>
      <div class="inner">
          <% categories.forEach(subCategory => { %>
            <% let cnt = 0; %>
            <% if (subCategory.posts && subCategory.posts.length) { %>
            <% cnt = subCategory.posts.length; %>
            <% } %>
              <div class="sub-toggle category-name" onclick="subToggle(this)">
                  <a><%= subCategory.title %> (<%= cnt %>)</a>
              </div>
              <ul class="sidebar-post-list">
                  <li>
                      <% subCategory.posts.forEach(posts => { %>
                          <div class="post-detail">
                              <a href="/posts/<%= posts.id %>"><%= posts.title %></a>
                          </div>
                      <% }) %>
                  </li>
              </ul>
          <% }) %>
      </div>
    </div>
